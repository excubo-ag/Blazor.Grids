<Project Sdk="Microsoft.NET.Sdk.Razor">
  <Import Project="package.csproj" Condition="Exists('package.csproj')" />
  <PropertyGroup>
    <TargetFrameworks>netstandard2.1</TargetFrameworks>
    <RazorLangVersion Condition= " '$(TargetFramework)' != 'net5.0' ">3.0</RazorLangVersion>
    <PackageId>Excubo.Blazor.Grids</PackageId>
    <RootNamespace>Excubo.Blazor.Grids</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Excubo.Generators.Blazor" Version="1.11.3" />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.10" Condition= " '$(TargetFramework)' == 'netstandard2.1' " />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.0.0" Condition= " '$(TargetFramework)' == 'netstandard2.1' " />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="5.0.0" Condition= " '$(TargetFramework)' == 'net5.0' " />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.0.0" Condition= " '$(TargetFramework)' == 'net5.0' " />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>

</Project>
